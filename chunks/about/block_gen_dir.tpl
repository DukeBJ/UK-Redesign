<section class="comments">
    <div class="container">
        <div class="comments__review">
            <div class="row">
                <div class="col-md-2 col-xs-3">
                    <div class="comments__img">
                        <img src="{'comment_gen_img'|config}" alt="">
                    </div>
                </div>
                <div class="col-md-8 col-sm-6 col-xs-9">
                    <div class="comments__review">
                        <h4>{'comment_gen_name'|config}</h4>
                        <span>{'comment_gen_position'|config}</span>
                        <p>{'comment_gen_message'|config}</p>
                    </div>
                </div>
                <div class="col-md-2 col-sm-3"></div>
            </div>
        </div>
    </div>
</section>
